 <div class="container">

  <div class="row main-content">
    <div class="col-md-6 text-center">
      <%=image_tag("19 cropped.png", alt: "WHASK image", style: "height: 540px")%>
    </div>

    <div class="col-md-4 col-md-offset-1 text-center">
      <div class="signup-form">
        <h2> WHASK your friends.</h2>

        <p> WHASK is a simple, creative & fun mobile app to survey your friends in a fun way and it's all good.</p>

        <%= form_for @prospect do |f| %>
          <% if @prospect.errors.any? %>
            <div id="error_explanation">
              <ul>
              <% @prospect.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
           <%= f.text_field :email, placeholder: "Enter your email" %>
         </div>

          <%= f.button "Be the first informed!", class: "btn btn-default" %>
        <%end%>
      </div>
    </div>
  </div>


  </div>

</div>

